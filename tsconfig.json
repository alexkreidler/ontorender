{
    "include": ["src"],
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "lib": ["dom", "esnext"],

        "importHelpers": true,

        "rootDir": "src",
        "typeRoots": ["./typings"],
        "outDir": "dist/cjs",

        "declaration": true,
        "declarationDir": "dist/types",
        "sourceMap": true,

        "strict": true,
        // "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        "jsx": "react",
        "esModuleInterop": true,
        "moduleResolution": "node"
    }
}
